<!DOCTYPE html>
<html>
  <head>
    <title>Ewetube</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta property="og:title" content="EweTube" />
    <meta property='og:image' content="<%= image_url('app/views/layouts/ewetube.png') %>"/>
    <meta property="og:description"
       content="A sheep themed Youtube Clone."
     />
    <meta property="og:url"
       content="https://ewetube.herokuapp.com/"
     />
    <script type="text/javascript">
      window.logoURL = "<%= image_url('ewetubelogo.svg') %>";
      window.logoblackURL = "<%= image_url('ewetubelogoblack.svg') %>";
      window.loginURL = "<%= image_url('loginicon.svg') %>";
      window.errorURL = "<%= image_url("error.svg") %>";
      window.defaultThumbnail = "<%= image_url("defaultThumbnail.svg")%>";
      window.barnURL = "<%= image_url("barn.svg") %>";
      window.githubURL = "<%= image_url("githubsheep.svg") %>";
      window.linkedinURL = "<%= image_url("linkedinsheep.svg") %>";
      window.resumeURL = "<%= image_url("resumesheep.svg") %>";
      window.charityURL = "<%= image_url("charitysheep.svg") %>";
      window.yourchannelURL = "<%= image_url("yourchannel.svg") %>";
      window.signoutURL = "<%= image_url("signout.svg") %>";
      window.feedbackURL = "<%= image_url("feedback.svg") %>";
      window.sheepgrayURL = "<%= image_url("sheepgray.svg") %>";
      window.sheepgreenURL = "<%= image_url("sheepgreen.svg") %>";
      window.wolfgrayURL = "<%= image_url("wolfgray.svg") %>";
      window.wolfredURL = "<%= image_url("wolfred.svg") %>";
      window.deletecloseURL = "<%= image_url("deleteclose.svg") %>";
      window.deleteopenURL = "<%= image_url("deleteopen.svg") %>";
    </script>
    <link rel="icon" type="image/x-icon" href="<%= image_url('ewetubefavicon.png') %>" />
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
